{
  "name": "@tarrasque/sdk",
  "version": "0.0.5",
  "description": "Plugin SDK for Tarrasque App",
  "keywords": [
    "tarrasque",
    "sdk",
    "plugin"
  ],
  "homepage": "https://github.com/tarrasqueapp/sdk#readme",
  "bugs": {
    "url": "https://github.com/tarrasqueapp/sdk/issues",
    "email": "support@tarrasque.app"
  },
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "Richard Solomou",
    "email": "richard@tarrasque.app",
    "url": "https://tarrasque.app"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tarrasqueapp/sdk"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "pnpm build --watch",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "tsc --noEmit && eslint .",
    "prepare": "husky install",
    "release": "release-it"
  },
  "dependencies": {
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.3.100",
    "@tronite/eslint-config": "^1.0.10",
    "@tronite/prettier-config": "^1.0.6",
    "@tronite/tsconfig": "^1.0.5",
    "@types/node": "^20.10.2",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "release-it": "^17.0.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "release-it": {
    "git": {
      "requireBranch": "main",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "${version}"
    },
    "hooks": {
      "before:init": [
        "git pull",
        "pnpm lint",
        "pnpm format"
      ],
      "after:bump": "pnpm build"
    }
  }
}
